<%= simple_form_for @advertisement, :html => {:multipart => true} do |f| %>
  <%= f.input :file, :as => :file %>
  <%= f.input :referral_url %>
  <%= f.input :ad_type, :collection => %w(vertical horizontal) %>
  <%= f.input :status, :collection => %w(active inactive) %>
  <%= f.button :submit %>
<% end %>