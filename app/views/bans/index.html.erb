<div class="bans">
  <div class="index">
    <h1>Bans</h1>
    
    <table class="striped">
      <thead>
        <tr>
          <th>User</th>
          <th>Expires</th>
          <th>Reason</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @bans.each do |ban| %>
          <tr id="ban-<%= ban.id %>">
            <td><%= ban.user.name %></td>
            <td><%= ban.expires_at %></td>
            <td><%= ban.reason %></td>
            <td>
              <%= link_to "Edit", edit_ban_path(ban) %>
              | <%= link_to "Delete", ban_path(ban), :method => :delete, :remote => true %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render "secondary_links" %>
