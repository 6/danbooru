<h1>Forum</h1>

<%= render "search" %>

<table width="100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Updated by</th>
      <th>Updated at</th>
    </tr>
  </thead>
  <tbody>
    <% @forum_topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.creator.name %></td>
        <td><%= topic.updater.name %></td>
        <td><%= compact_time topic.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "secondary_links" %>