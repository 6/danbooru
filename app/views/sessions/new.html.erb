<div id="sessions">
  <div id="new">
    <section>
      <h1>Login</h1>
      <%= form_tag(session_path, :class => "simple_form") do %>
        <%= hidden_field_tag "url", params[:url] %>

        <div class="input">
          <label for="name">Name</label>
          <%= text_field_tag :name %>
        </div>
        
        <div class="input">
          <label for="password">Password</label>
          <%= password_field_tag :password %>
        </div>
        
        <div class="input">
          <%= submit_tag "Submit" %>
        </div>
      <% end %>
    </section>

    <aside>
      <h1>Help</h1>
      <ul>
        <li><%= link_to "I don't have an account", new_user_path %></li>
        <li><%= link_to "I forgot my password", reset_password_path %></li>
        <li><%= link_to "I forgot my user name", login_reminder_path %></li>
      </ul>
    </aside>    
  </div>
</div>

<% content_for(:page_title) do %>
 /login
<% end %>
