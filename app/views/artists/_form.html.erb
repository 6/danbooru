<%= simple_form_for(@artist) do |f| %>
  <%= f.input :name %>
  <%= f.input :other_names, :hint => "Separate with commas", :as => :text %>
  <%= f.input :group_name %>
  <%= f.input :url_string, :label => "URLs", :as => :text, :input_html => {:size => "50x5"} %>
  <%= f.input :is_active %>
  <%= f.input :is_banned %>
  <%= f.input :notes, :as => :text %>
  <%= f.button :submit %>
<% end %>